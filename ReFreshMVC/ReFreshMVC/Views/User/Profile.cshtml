@model ReFreshMVC.Models.User

@{
    @using ReFreshMVC.Models;
    Layout = "_Layout";
    User user = Model;
}

<div class="container">
    <form asp-controller="User" asp-action="ProfileUpdate" method="post" class="col s12">
        <div class="row">
            <div class="col m2"></div>
            <div class="col m8"><i class="large material-icons">person</i></div>
            <div class="col m2"></div>
        </div>
        <div classs="row">
            <div class="input-field col s10">
                <input asp-for="@Model.FirstName">
                <label asp-for="@Model.FirstName">First Name</label>
            </div>
            <div class="col s2"></div>
        </div>
        <div class="row">
            <div class="input-field col s10">
                <input asp-for="@Model.LastName">
                <label asp-for="@Model.LastName">Last Name</label>
            </div>
            <div class="col s2"></div>
        </div>
        <div class="row">
            <div class="col s12"><button type="submit" value="submit">Update Profile</button></div>
        </div>
        <div class="row">
            <div class=" col s12"><p>@Model.Email</p></div>
        </div>
</form>
</div>

