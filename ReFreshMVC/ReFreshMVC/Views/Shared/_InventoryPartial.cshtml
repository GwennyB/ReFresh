@model ReFreshMVC.Models.Product



<form class="postform" method="post" enctype="multipart/form-data">
    @*<label asp-for="Image"></label>*@
    <div class="productimage">
        <img src="~/Img/@Model.Image" alt="Name" />
        <input asp-for="Image" type="file" />
    </div>
    <div class="inventory">
        <label asp-for="Category"></label>
        <select asp-for="Category" asp-items="@Html.GetEnumSelectList<ReFreshMVC.Models.Categories>()"></select>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <label asp-for="Sku"></label>
        <input asp-for="Sku" />
        <label asp-for="Price"></label>
        <input asp-for="Price" />
        <label asp-for="Price"></label>
        <input asp-for="Price" />
        <label asp-for="Meaty"><input type="checkbox" asp-for="Meaty" /></label>

    <fieldset>
        <button type="submit">Update Product</button>
        <button type="submit" asp-page-handler="Delete">Delete Product</button>
    </fieldset>
    </div>
</form>

